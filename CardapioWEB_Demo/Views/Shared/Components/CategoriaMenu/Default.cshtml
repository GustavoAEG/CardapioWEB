<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" role="button"
       id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: firebrick; border: none;">
        Lanches
    </a>

    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List" style="color: firebrick;"
                   asp-route-categoria="@categoria.Nome">@categoria.Nome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria=""
               style="color: firebrick;">Todos os Lanches</a>
        </li>
    </ul>
</div>
