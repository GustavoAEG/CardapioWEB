@model Lanche

<style>
    .btn-primary {
        background-color: darkred;
        color: #FFFFFF;
        /* Other style properties if needed */
    }
</style>

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid" style="height: 350px;"></p>
    <h3>Preço : @Model.Preco.ToString("c")</h3>

    <h4>
        <a asp-controller="Lanche" asp-action="Details"
           asp-route-lancheId="@Model.lancheID">@Model.Nome</a>
    </h4>

    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.lancheID">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>
